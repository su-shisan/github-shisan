  margin-top: 28rpx;
  margin-left: 280rpx;
}
.account-total .submit {
  width: 690rpx;
  height: 72rpx;
  background: -webkit-gradient(linear, left top, left bottom, from(#3AC0FF), to(rgba(58, 192, 255, 0))) #087CB2;
  background: -webkit-linear-gradient(top, #3AC0FF 0%, rgba(58, 192, 255, 0) 100%) #087CB2;
  background: linear-gradient(180deg, #3AC0FF 0%, rgba(58, 192, 255, 0) 100%) #087CB2;
  border-radius: 16rpx;
  margin-left: 30rpx;
  margin-top: 262rpx;
}
.account-total .submit .submit-title {
  float: left;
  width: 64rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 44rpx;
  margin-top: 14rpx;
  margin-left: 314rpx;
}

